<%- include('header.ejs'); %>
<%- include('navbar.ejs'); %>
    <div class="container">
      <% if (model.error) { -%>
      <div class="alert bg-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><%= model.message %></p>
      </div>
      <% } -%>
      <form class="form-login form-horizontal" role="form" method="POST">
        <div class="form-login-title col-sm-offset-1 col-sm-11">
          <h1>登入</h1>
        </div>
        <div class="form-group col-sm-12<%= model.error ? ' has-error has-feedback' : '' %>">
          <label class="control-label col-sm-2" for="username">帳號</label>
          <div class="col-sm-4">
            <input type="text" class="form-control" name="username" id="username" placeholder="User name" value="<%= model.username || '' %>" required autofocus>
            <% if (model.error) { -%>
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            <% } -%>
          </div>
        </div>
        <div class="form-group col-sm-12<%= model.error ? ' has-error has-feedback' : '' %>">
          <label class="control-label col-sm-2" for="password">密碼</label>
          <div class="col-sm-4">
            <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
            <% if (model.error) { -%>
            <span class="glyphicon glyphicon-remove form-control-feedback"></span>
            <% } -%>
          </div>
        </div>
        <div class="form-group col-sm-12">
          <div class="col-sm-offset-2 col-sm-10">
          <input class="btn btn-lg btn-default" type="submit" value="登入">
          </div>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrf %>">
      </form>

    </div>
<%- include('footer.ejs'); %>